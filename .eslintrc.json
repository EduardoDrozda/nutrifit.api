{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript/space-before-function-paren": [
      true,
      { "anonymous": "always", "named": "never", "asyncArrow": "always" }
    ]
  }
}
